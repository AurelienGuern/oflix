{% extends 'back/layout_back.html.twig' %}

{% block title %}Détail d'une saison{% endblock %}

{% block body %}
    <h1>Détail d'une saison de la série {{ movie.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>EpisodesNumber</th>
                <td>{{ season.episodesNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_season_index', {'id': movie.id}) }}">back to list</a>

    <a href="{{ path('app_back_season_edit', {'id': movie.id, 'idSeason': season.id}) }}">edit</a>

    {{ include('back/season/_delete_form.html.twig') }}
{% endblock %}
