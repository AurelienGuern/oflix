{% extends 'back/layout_back.html.twig' %}

{% block title %}Liste des saisons{% endblock %}

{% block body %}
    <h1>Liste des saisons de la s√©rie {{ movie.title }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>EpisodesNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.episodesNumber }}</td>
                <td>
                    <a href="{{ path('app_back_season_show', {'id': season.id}) }}">show</a>
                    <a href="{{ path('app_back_season_edit', {'id': movie.id, 'idSeason': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_season_new', {'id': movie.id}) }}">Nouvelle saison</a>
{% endblock %}
